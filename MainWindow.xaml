<Window x:Class="MLM.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MLM"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal"
					VerticalAlignment="Center"
					Grid.Row="0">
				<TextBlock Text="Start time: "/>
				<TextBlock x:Name="starttime"/>
				<TextBlock Text=" End time: " />
				<TextBlock x:Name="endtime" />
				<TextBlock Text=" Elapsed: "/>
				<TextBlock x:Name="elapsedtime" />
		</StackPanel>
		<ListBox x:Name="unixmilliseconds"
				 Grid.Row="1"
				 ScrollViewer.VerticalScrollBarVisibility="Auto">
		</ListBox>
    </Grid>
</Window>
